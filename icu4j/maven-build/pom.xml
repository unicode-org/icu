    <!-- Bundle-Copyright -->
    <jar.copyright.info>&#169; 2016 and later: Unicode, Inc. and others. License &#38; terms of use: http://www.unicode.org/copyright.html</jar.copyright.info>

    <!-- Main-Class -->
